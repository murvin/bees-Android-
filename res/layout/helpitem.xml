<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:padding="10dp">

    <TextView
        android:id="@+id/textViewHelpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center_horizontal" android:textColor="#ffffff" android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/imageViewHelpItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shadow" android:layout_gravity="center_horizontal" android:layout_margin="10dp" android:contentDescription="@string/img_cont_desc_shadow_bg"/>

    <TextView
        android:id="@+id/textViewHelpDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:textColor="#ffffff" android:paddingBottom="25dp" android:layout_margin="10dp" android:lines="6" android:textSize="20dp"/>

</LinearLayout>